        {
          "name": "Sign Up",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.environment.set(\"jwt\", pm.response.json().token);",
                  "",
                  "let status = pm.response.json().status",
                  "",
                  "if(status === \"success\"){",
                  "    let requestBody = pm.request.body.raw",
                  "    let jsonBody = JSON.parse(requestBody);",
                  "    pm.environment.set(\"email\", jsonBody.email);",
                  "    pm.environment.set(\"password\", jsonBody.password);",
                  "}else{",
                  "    pm.environment.unset(\"email\");",
                  "    pm.environment.unset(\"password\")",
                  "}",
                  ""
                ],
                "type": "text/javascript",
                "packages": {}
              }
            },
            {
              "listen": "prerequest",
              "script": {
                "exec": [""],
                "type": "text/javascript",
                "packages": {}
              }
            }
          ],
          "protocolProfileBehavior": {
            "strictSSL": false
          },
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"kenan\",\n    \"email\": \"testuser2@jonas.io\",\n    \"password\": \"pass1234\",\n    \"passwordConfirm\": \"pass1234\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{URL}}api/v1/users/signup",
              "host": ["{{URL}}api"],
              "path": ["v1", "users", "signup"]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "let email = pm.environment.get(\"email\")",
                  "let password = pm.environment.get(\"password\")",
                  "",
                  "let initialBody = {",
                  "    email: email || \"\",",
                  "    password: password || \"\"",
                  "}",
                  "",
                  "pm.request.body.raw = JSON.stringify(initialBody)"
                ],
                "type": "text/javascript",
                "packages": {}
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.environment.set(\"jwt\", pm.response.json().token);"
                ],
                "type": "text/javascript",
                "packages": {}
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "// The request body is generated in the pre-request script. It constructs the body using the email and password of the last successfully logged-in user.",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{URL}}api/v1/users/login",
              "host": ["{{URL}}api"],
              "path": ["v1", "users", "login"]
            }
          },
          "response": []
        }
      ]
